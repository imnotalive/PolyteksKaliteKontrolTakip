                    </div>
                    <div class="card-body">
                        <section class="content">
                            <div class="container-fluid">

                                <div class="row">
                                    <div class="col-lg-3 col-6">

                                        <div class="small-box bg-info">
                                            <div class="inner">
                                                @*<h3>sayac</h3>*@
                                                <br />      <br />

                                                <p><b>MÜŞTERİ ŞİKAYETLERİ</b></p>
                                            </div>
                                            <div class="icon">
                                                @*<i class="fas fa-chart-line"></i>*@
