}



<br />

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-dark card-outline">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-paperclip"></i>
                            <b>KISAYOLLAR</b>
