                            <td style="color: black">@Html.DisplayFor(model => model.EEYorum)</td>

                        </tr>
                    } @if (Model.ProsesYorum != null)
                    {
                        <tr>
                            <td style="color: black"><b>PROSES KONTROL YORUMU</b></td>
                            <td style="color: black">@Html.DisplayFor(model => model.ProsesYorum)</td>

                        </tr>
                    } @if (Model.PaketlemeYorum != null)
                    {
                        <tr>
                            <td style="color: black"><b>PAKETLEME YORUMU</b></td>
