                        <td style="color: black">  @Html.DisplayFor(model => model.Qdms_Cari.Ulke)</td>
                    </tr>
                    <tr>
                        <td style="color: black"><b>ŞİKAYET/REKLAMASYON GELİŞ TARİHİ</b></td>

                        <td style="color: black">    @Convert.ToDateTime(Model.SikayetReklamasyonGelisTarihi).ToString("dd.MM.yyyy")</td>

                    </tr>
                    <tr>
                        <td style="color: black"><b>ŞİKAYET/REKLAMASYON GRUBU</b></td>
                        <td style="color: black">
                            @Html.DisplayFor(model => model.Qdms_SikayetSebebi.Qdms_SikayetGrubu.SikayetGrubu)
                        </td>
                    </tr>
                    <tr>
                        <td style="color: black"><b>ŞİKAYET/REKLAMASYON SEBEBİ</b></td>
                        <td style="color: black">
                            @Html.DisplayFor(model => model.Qdms_SikayetSebebi.SikayetSebebi)
                        </td>
                    </tr>
                    <tr>
                        <td style="color: black"><b>KALİTE</b></td>
                        <td style="color: black">
                            @Html.DisplayFor(model => model.Kalite)
                        </td>
                    </tr>
                    <tr>
                        <td style="color: black"><b>ŞİKAYETİN YAPILDIĞI İLETİŞİM ARACI</b></td>
                        <td style="color: black">
                            @Html.DisplayFor(model => model.SikayetIletisim)
                        </td>
                    </tr>
                    <tr>
                        <td style="color: black"><b>İPLİĞİN KULLANILDIĞI YERLER</b></td>
                        <td style="color: black">
                            @Html.DisplayFor(model => model.IplikKullanimYeri)
                        </td>
                    </tr>
                    <tr>
                        <td style="color: black"><b>BOBİN</b></td>
                        <td style="color: black">
                            @Html.DisplayFor(model => model.Bobin)
                        </td>
                    </tr>
                    <tr>
