                    }
                    @if (Model.SikayetSonucu != null)
                    {
                        <tr>
                            <td style="color: black"><b>ŞİKAYET SONUCU</b></td>
                            <td style="color: black">@Html.DisplayFor(model => model.SikayetSonucu)</td>

                        </tr>
                    }
