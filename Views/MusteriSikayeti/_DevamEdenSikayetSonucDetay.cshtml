                    {
                        if (Model.Qdms_MusteriSikayetResim != null)
                        {
                            <tr>
                                <td style="color: black"><b>RESİM</b></td>
                                <td style="color: black"> <img src="@Url.Content(item.ImagePath)" width="600" height="600" /> <img src="~/Content/upload/@Model.Resims"   /></td>

                            </tr>
                        }
                    }*@


                    @if (Model.BukumYorum != null)
                    {
                        <tr>
                            <td style="color: black"><b>BÜKÜM YORUM</b></td>
                            <td style="color: black">@Html.DisplayFor(model => model.BukumYorum)</td>

                        </tr>
                    } @if (Model.TekstureYorum != null)
                    {
                        <tr>
                            <td style="color: black"><b>TEKSTÜRE YORUM</b></td>
                            <td style="color: black">@Html.DisplayFor(model => model.TekstureYorum)</td>

                        </tr>
                    } @if (Model.TTYorum != null)
                    {
                        <tr>
                            <td style="color: black"><b>TEKNİK TEKSTİL YORUM</b></td>
                            <td style="color: black">@Html.DisplayFor(model => model.TTYorum)</td>

                        </tr>
                    } @if (Model.SevkiyatYorum != null)
                    {
                        <tr>
                            <td style="color: black"><b>SEVKİYAT YORUM</b></td>
                            <td style="color: black">@Html.DisplayFor(model => model.SevkiyatYorum)</td>

                        </tr>
                    } @if (Model.SatinalmaYorum != null)
                    {
                        <tr>
                            <td style="color: black"><b>SATIN ALMA YORUM</b></td>
                            <td style="color: black">@Html.DisplayFor(model => model.SatinalmaYorum)</td>

                        </tr>
                    } @if (Model.YapilanAnalizler != null)
                    {
                        <tr>
                            <td style="color: black"><b>LABORATUVAR YORUM</b></td>
                            <td style="color: black">@Html.Raw(Model.YapilanAnalizler)</td>

                        </tr>
                    } @if (Model.UretimYorum != null)
