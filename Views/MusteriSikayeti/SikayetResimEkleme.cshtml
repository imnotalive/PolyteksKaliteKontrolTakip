@model PolyteksKaliteKontrolTakip.Models.Qdms_MusteriSikayetResim

@{
    ViewBag.Title = "SikayetResimEkleme";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



@using (Html.BeginForm("SikayetResimEkleme", "MusteriSikayeti", FormMethod.Post, new { enctype = "multipart/form-data" }))

{


    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)



        <div class="form-group">
            <b>RESİM EKLE</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ImagePath, new { htmlAttributes = new { @class = "form-control", type = "file", multiple = "true" } })
                @Html.ValidationMessageFor(model => model.ImagePath, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="RESİM EKLE" class="btn btn-success" />
            </div>
        </div>
    </div>

}




